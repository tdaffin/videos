{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++ \"${file}\" -g -DUNICODE -I${workspaceFolder} -I/usr/include/SDL2 -lSDL2 -lpthread -std=c++11",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/a.out",
            "problemMatcher": []
        }
    ]
}